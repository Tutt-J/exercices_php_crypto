{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
<div class="container mt-3">
    <a href="{{ path('app_task_index') }}">< Retour à la liste</a>
    <h1>Supprimer la tâche "{{ task.name }}"</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ task.name }}</td>
            </tr>
            <tr>
                <th>Priorité</th>
                <td>{{ task.priority }}</td>
            </tr>
            <tr>
                <th>Date de rendu</th>
                <td>{{ task.dueDate ? task.dueDate|date('d/m/Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('task/_delete_form.html.twig') }}
</div>

{% endblock %}